{
  "name": "nuts-desktop",
  "productName": "fdFlow",
  "version": "1.0.0-alpha1",
  "description": "nuts desktop",
  "main": "main.js",
  "scripts": {
    "start": "./node_modules/.bin/electron main.js",
    "build:linux32": "rm -rf dist && electron-packager ./ fdFlow --platform=linux --arch=ia32 --icon=./assets/img/fd.icns --overwrite --out ./dist/$npm_package_version --version=0.37.8 --ignore='(.github|.DS_Store)'",
    "build:linux64": "rm -rf dist && electron-packager ./ fdFlow --platform=linux --arch=x64 --icon=./assets/img/fd.icns --overwrite --out ./dist/$npm_package_version --version=0.37.8 --ignore='(.github|.DS_Store)'",
    "build:mac": "rm -rf dist && electron-packager ./ fdFlow --platform=darwin --arch=x64 --icon=./assets/img/fd.icns --overwrite --out ./dist/$npm_package_version --version=1.2.8 --ignore='(.github|.DS_Store)'",
    "build:win32": "rm -rf dist && electron-packager ./ fdFlow --platform=win32 --arch=ia32 --icon=./assets/img/fd.png --overwrite --out ./dist --version=0.37.8 --ignore=.github",
    "build:win64": "rm -rf dist && electron-packager ./ fdFlow --platform=win32 --arch=x64 --icon=./assets/img/fd.png --overwrite --out ./dist --version=1.2.8 --ignore=.github",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/F-happy/nuts-desktop.git"
  },
  "keywords": [
    "work",
    "gulp",
    "GUI",
    "workflow",
    "scss"
  ],
  "author": "jonnyf",
  "license": "MIT",
  "devDependencies": {
    "electron-packager": "^8.1.0",
    "electron-prebuilt": "^1.4.3",
    "electron-rebuild": "^1.2.1",
    "vue": "^2.0.0"
  },
  "dependencies": {
    "babel-core": "^6.16.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-connect": "^5.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace-pro": "^1.0.1",
    "gulp-sass": "^2.3.2",
    "nuts-scss": "^1.2.0",
    "through2": "^2.0.1",
    "webpack-stream": "^3.2.0"
  }
}
